{
  "name": "Ku-nya",
  "version": "2.1.0",
  "manifest_version": 2,
  "description":
    "Ku-nya picks up illustrations on the pixiv ranking randomly and displays them on your new tab. Enjoy your pixiv life!",
  "content_security_policy":
    "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newTab.html"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon" : {
      "19": "icon/icon19.png",
      "38": "icon/icon38.png"
    }
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://www.pixiv.net/",
    "https://i.pximg.net/"
  ]
}
